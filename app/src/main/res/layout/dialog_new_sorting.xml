<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID instance třídění"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"/>
    <EditText
        android:id="@+id/session_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2021-05-24 12-03 0001"
        android:hint="ID instance třídění"
        android:padding="8dp"
        android:focusable="true"
        android:enabled="false"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="24dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Počet čísel pro setřídění"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"/>
    <EditText
        android:id="@+id/length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zadejte číslo ..."
        android:padding="8dp"
        android:focusable="true"
        android:inputType="number"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="24dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nejmenší možné generované číslo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"/>
    <EditText
        android:id="@+id/min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zadejte číslo ..."
        android:padding="8dp"
        android:focusable="true"
        android:inputType="number"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="24dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Největší možné generované číslo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="8dp"/>
    <EditText
        android:id="@+id/max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="zadejte číslo ..."
        android:padding="8dp"
        android:focusable="true"
        android:inputType="number"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maximální povolená velikost je 2 000 000 čísel"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:padding="8dp"/>
</LinearLayout>