<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/floating_layout"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/image_animated"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_searching" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="@string/dialog_message_search_result_title"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/text_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Hledané číslo: %num%"/>
        <TextView
            android:id="@+id/text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Celkem nalezeno: %amount% krát"/>
    </LinearLayout>
</LinearLayout>